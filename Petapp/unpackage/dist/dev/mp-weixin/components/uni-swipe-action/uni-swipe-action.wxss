
@charset "UTF-8";
.uni-swipe-action {
	width: 100%;
	overflow: hidden
}
.uni-swipe-action__content {
	width: 50%
}
.uni-swipe-action__btn-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row
}
.uni-swipe-action--show {
	position: relative;
	z-index: 1000
}
.uni-swipe-action__mask {
	display: block;
	opacity: 0;
	position: fixed;
	z-index: 999;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%
}

